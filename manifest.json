{
  "manifest_version": 3,
  "name": "AI Vision - Screenshot & ask or type non-image questions with Gemini",
  "version": "1.1",
  "description": "Take a screenshot and ask questions based on the picture (using the Gemini API)",
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "AI Vision",
    "default_icon": {
      "16": "icons/AI_Vision_16.png",
      "32": "icons/AI_Vision_32.png",
      "48": "icons/AI_Vision_48.png",
      "128": "icons/AI_Vision_128.png"
    }
  },
  "icons": {
    "16": "icons/AI_Vision_16.png",
    "32": "icons/AI_Vision_32.png",
    "48": "icons/AI_Vision_48.png",
    "128": "icons/AI_Vision_128.png"
  }
}

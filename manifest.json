{
  "manifest_version": 3,
  "name": "AI Vision - Screenshot & ask - free visual AI query tool with Gemini",
  "version": "1.3",
  "description": "Snap a screenshot and ask anything. Instant answers from Gemini. AI Insights, reading tool, summarize or explain pictures & paragraphs.",
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "AI Vision",
    "default_icon": {
      "16": "icons/AI_Vision_16.png",
      "32": "icons/AI_Vision_32.png",
      "48": "icons/AI_Vision_48.png",
      "128": "icons/AI_Vision_128.png"
    }
  },
  "icons": {
    "16": "icons/AI_Vision_16.png",
    "32": "icons/AI_Vision_32.png",
    "48": "icons/AI_Vision_48.png",
    "128": "icons/AI_Vision_128.png"
  }
}
